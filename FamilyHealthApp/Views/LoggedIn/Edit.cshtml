@model FamilyHealthApp.Models.Car

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Edit the selected car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form class="ui form" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CarId" />
            <div class="form-group field">
                <label asp-for="Make"></label>
                <input asp-for="Make" />
                <span asp-validation-for="Make"></span>
            </div>
            <div class="form-group field">
                <label asp-for="Model"></label>
                <input asp-for="Model" />
                <span asp-validation-for="Model"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="ui button" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to dashboard</a>
</div>
