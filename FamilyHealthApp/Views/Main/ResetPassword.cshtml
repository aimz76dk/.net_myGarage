@model ResetPasswordViewModel

@{
    ViewBag.Title = "Reset Password";
    Layout = "_Layout";
}

<div class="ui raised very padded text container">
    <h2 class="ui header center">Reset Password</h2>
    <form asp-controller="Main" asp-action="ResetPassword" class="ui large form validate-me" method="post">

		<input asp-for="Code" type="hidden" value="@Context.Request.Query["code"]" />
        <div class="ui stacked segment">
            <div class="field">
                <div class="ui left icon input">
                    <i class="user icon"></i>
                    <input asp-for="Email" placeholder="Emil Address"/>
                </div>
            </div>
            <div class="field">
                <div class="ui left icon input">
                    <i class="lock icon"></i>
                    <input asp-for="Password" type="password" placeholder="Password"/>
                </div>
            </div>
            <div class="field">
                <div class="ui left icon input">
                    <i class="lock icon"></i>
                    <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password"/>
                </div>
            </div>
            
            <input type="submit" class="ui large red submit button" value="Reset"/>
            <div asp-validation-summary="All" class="ui error message"></div>
           
        </div>

    </form>
</div>
